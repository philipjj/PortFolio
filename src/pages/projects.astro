---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<BaseLayout title="My Projects">
  <Header slot="header" />
  <section class="projects container mx-auto py-12">
    <h1 class="text-4xl font-bold mb-6">My Projects</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <!-- Project Card 1 -->
      <div class="bg-gray-800 rounded-lg shadow-lg p-6">
        <h2 class="text-2xl font-bold mb-2">Project One</h2>
        <p class="text-gray-400 mb-4">A brief description of project one.</p>
        <a href="#" class="text-blue-400 hover:underline">View Project</a>
      </div>
      <!-- Project Card 2 -->
      <div class="bg-gray-800 rounded-lg shadow-lg p-6">
        <h2 class="text-2xl font-bold mb-2">Project Two</h2>
        <p class="text-gray-400 mb-4">A brief description of project two.</p>
        <a href="#" class="text-blue-400 hover:underline">View Project</a>
      </div>
      <!-- Project Card 3 -->
      <div class="bg-gray-800 rounded-lg shadow-lg p-6">
        <h2 class="text-2xl font-bold mb-2">Project Three</h2>
        <p class="text-gray-400 mb-4">A brief description of project three.</p>
        <a href="#" class="text-blue-400 hover:underline">View Project</a>
      </div>
    </div>
  </section>
  <Footer slot="footer" />
</BaseLayout>