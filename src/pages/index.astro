---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Button from "../components/ui/button.astro";
import Card from "../components/ui/card.astro";
import CardContent from "../components/ui/card-content.astro";
import CardDescription from "../components/ui/card-description.astro";
import CardHeader from "../components/ui/card-header.astro";
import CardTitle from "../components/ui/card-title.astro";
import Input from "../components/ui/input.astro";
import Textarea from "../components/ui/textarea.astro";
import Carousel from "../components/ui/carousel.astro";
---

<BaseLayout title="My Portfolio">
  <Header slot="header" />

  <!-- Hero Section -->
  <section id="hero" class="hero py-20 md:py-32 min-h-screen flex items-center">
    <div class="container mx-auto text-center px-4">
      <h1 class="text-4xl md:text-6xl font-bold mb-6 bg-gradient-to-r from-primary to-primary-foreground bg-clip-text text-transparent">
        Hi, I'm Philip
      </h1>
      <p class="text-lg md:text-xl mb-8 max-w-2xl mx-auto text-muted-foreground">
        A passionate full-stack developer specializing in creating modern web applications with JavaScript, TypeScript, and Astro.
      </p>
      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <Button as="a" href="#projects" variant="outline">View My Work</Button>
        <Button as="a" href="#contact" variant="outline">Contact Me</Button>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section id="about" class="about py-20">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl md:text-4xl font-bold text-center mb-16 text-primary">About Me</h2>
      <div class="flex flex-col md:flex-row items-center gap-12 max-w-6xl mx-auto">
        <div class="md:w-1/3 flex justify-center">
          <div class="bg-muted border-2 border-dashed rounded-xl w-64 h-64" />
        </div>
        <div class="md:w-2/3">
          <h3 class="text-2xl font-semibold mb-4">Crafting Digital Experiences</h3>
          <p class="text-muted-foreground mb-6 leading-relaxed">
            I'm a passionate full-stack developer with expertise in modern web technologies. I love creating efficient, scalable, and user-friendly applications that solve real-world problems.
          </p>
          <p class="text-muted-foreground mb-6 leading-relaxed">
            With experience in JavaScript, TypeScript, React, Vue, and Astro, I bring ideas to life through clean code and intuitive user interfaces.
          </p>
          <div class="flex flex-wrap gap-3">
            <span class="inline-flex items-center gap-2 rounded-full border px-2.5 py-0.5 text-sm font-semibold transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 border-transparent bg-primary text-primary-foreground hover:bg-primary/80">
              <img src="https://cdn.jsdelivr.net/gh/philipjj/My-Icons@main/icons/svg/JavaScript.svg" alt="JavaScript" class="w-4 h-4" loading="lazy" />
              JavaScript
            </span>
            <span class="inline-flex items-center gap-2 rounded-full border px-2.5 py-0.5 text-sm font-semibold transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 border-transparent bg-primary text-primary-foreground hover:bg-primary/80">
              <img src="https://cdn.jsdelivr.net/gh/philipjj/My-Icons@main/icons/svg/TypeScript.svg" alt="TypeScript" class="w-4 h-4" loading="lazy" />
              TypeScript
            </span>
            <span class="inline-flex items-center gap-2 rounded-full border px-2.5 py-0.5 text-sm font-semibold transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 border-transparent bg-primary text-primary-foreground hover:bg-primary/80">
              <img src="https://cdn.jsdelivr.net/gh/philipjj/My-Icons@main/icons/svg/React.js.svg" alt="React" class="w-4 h-4" loading="lazy" />
              React
            </span>
            <span class="inline-flex items-center gap-2 rounded-full border px-2.5 py-0.5 text-sm font-semibold transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 border-transparent bg-primary text-primary-foreground hover:bg-primary/80">
              <img src="https://cdn.jsdelivr.net/gh/philipjj/My-Icons@main/icons/svg/Vue.js.svg" alt="Vue.js" class="w-4 h-4" loading="lazy" />
              Vue.js
            </span>
            <span class="inline-flex items-center gap-2 rounded-full border px-2.5 py-0.5 text-sm font-semibold transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 border-transparent bg-primary text-primary-foreground hover:bg-primary/80">
              <img src="https://cdn.jsdelivr.net/gh/philipjj/My-Icons@main/icons/svg/Astro.svg" alt="Astro" class="w-4 h-4" loading="lazy" />
              Astro
            </span>
            <span class="inline-flex items-center gap-2 rounded-full border px-2.5 py-0.5 text-sm font-semibold transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 border-transparent bg-primary text-primary-foreground hover:bg-primary/80">
              <img src="https://cdn.jsdelivr.net/gh/philipjj/My-Icons@main/icons/svg/Node.js.svg" alt="Node.js" class="w-4 h-4" loading="lazy" />
              Node.js
            </span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Projects Section -->
  <section id="projects" class="projects py-20">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl md:text-4xl font-bold text-center mb-16 text-primary">My Projects</h2>
      <div class="relative w-full overflow-hidden py-8">
        <div class="absolute top-0 left-0 w-full h-1/2 bg-gradient-to-b from-background from-0% via-background/90 via-50% to-transparent to-100% z-10"></div>
        <Carousel />
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section id="contact" class="contact py-20">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl md:text-4xl font-bold text-center mb-16 text-primary">Get In Touch</h2>
      <div class="max-w-2xl mx-auto">
        <Card>
          <CardHeader>
            <CardTitle>Let's work together</CardTitle>
            <CardDescription>
              Have a project in mind? Feel free to reach out and let's discuss how I can help you achieve your goals.
            </CardDescription>
          </CardHeader>
          <CardContent>
            <form class="space-y-6">
              <div>
                <Input id="name" placeholder="Your name" />
              </div>
              <div>
                <Input id="email" type="email" placeholder="your.email@example.com" />
              </div>
              <div>
                <Textarea id="message" placeholder="Your message here..." rows={5} />
              </div>
              <Button type="submit" size="lg" class="w-full hover-animate">Send Message</Button>
            </form>
          </CardContent>
        </Card>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
</BaseLayout>