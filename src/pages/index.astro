---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<BaseLayout title="My Portfolio">
  <Header slot="header" />

  <!-- Hero Section -->
  <section id="hero" class="hero bg-gradient-to-br from-gray-900 to-gray-800 text-white py-32 min-h-screen flex items-center">
    <div class="container mx-auto text-center px-4">
      <div class="inline-block bg-gradient-to-r from-blue-500 to-purple-600 text-transparent bg-clip-text">
        <h1 class="text-5xl md:text-7xl font-bold mb-6">Hi, I'm Philip</h1>
      </div>
      <p class="text-xl md:text-2xl mb-8 max-w-2xl mx-auto text-gray-300">A passionate full-stack developer specializing in creating modern web applications with JavaScript, TypeScript, and Astro.</p>
      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <a href="#projects" class="bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white font-bold py-3 px-8 rounded-lg transition-all duration-300 transform hover:scale-105">View My Work</a>
        <a href="#contact" class="bg-transparent border-2 border-white hover:bg-white hover:text-gray-900 text-white font-bold py-3 px-8 rounded-lg transition-all duration-300">Contact Me</a>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section id="about" class="about bg-gray-50 py-20">
    <div class="container mx-auto px-4">
      <h2 class="text-4xl font-bold text-center mb-16 text-gray-900">About Me</h2>
      <div class="flex flex-col md:flex-row items-center gap-12 max-w-6xl mx-auto">
        <div class="md:w-1/3 flex justify-center">
          <div class="bg-gray-200 border-2 border-dashed rounded-xl w-64 h-64" />
        </div>
        <div class="md:w-2/3">
          <h3 class="text-2xl font-semibold mb-4 text-gray-800">Crafting Digital Experiences</h3>
          <p class="text-gray-600 mb-6 leading-relaxed">
            I'm a passionate full-stack developer with expertise in modern web technologies. I love creating efficient, scalable, and user-friendly applications that solve real-world problems.
          </p>
          <p class="text-gray-600 mb-6 leading-relaxed">
            With experience in JavaScript, TypeScript, React, Vue, and Astro, I bring ideas to life through clean code and intuitive user interfaces.
          </p>
          <div class="flex flex-wrap gap-3">
            <span class="bg-blue-100 text-blue-800 px-4 py-2 rounded-full text-sm">JavaScript</span>
            <span class="bg-purple-100 text-purple-800 px-4 py-2 rounded-full text-sm">TypeScript</span>
            <span class="bg-green-100 text-green-800 px-4 py-2 rounded-full text-sm">React</span>
            <span class="bg-red-100 text-red-800 px-4 py-2 rounded-full text-sm">Vue.js</span>
            <span class="bg-yellow-100 text-yellow-800 px-4 py-2 rounded-full text-sm">Astro</span>
            <span class="bg-indigo-100 text-indigo-800 px-4 py-2 rounded-full text-sm">Node.js</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Projects Section -->
  <section id="projects" class="projects bg-white py-20">
    <div class="container mx-auto px-4">
      <h2 class="text-4xl font-bold text-center mb-16 text-gray-900">My Projects</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
        <div class="bg-gray-50 rounded-xl overflow-hidden shadow-lg hover:shadow-2xl transition-shadow duration-300">
          <div class="bg-gray-200 border-2 border-dashed w-full h-48" />
          <div class="p-6">
            <h3 class="text-xl font-bold mb-2 text-gray-900">E-commerce Platform</h3>
            <p class="text-gray-600 mb-4">A full-featured online store with payment processing and inventory management.</p>
            <div class="flex flex-wrap gap-2">
              <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-xs">React</span>
              <span class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-xs">Node.js</span>
              <span class="bg-purple-100 text-purple-800 px-3 py-1 rounded-full text-xs">MongoDB</span>
            </div>
          </div>
        </div>
        <div class="bg-gray-50 rounded-xl overflow-hidden shadow-lg hover:shadow-2xl transition-shadow duration-300">
          <div class="bg-gray-200 border-2 border-dashed w-full h-48" />
          <div class="p-6">
            <h3 class="text-xl font-bold mb-2 text-gray-900">Task Management App</h3>
            <p class="text-gray-600 mb-4">A productivity application with drag-and-drop interface and team collaboration.</p>
            <div class="flex flex-wrap gap-2">
              <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-xs">Vue.js</span>
              <span class="bg-yellow-100 text-yellow-800 px-3 py-1 rounded-full text-xs">Firebase</span>
              <span class="bg-red-100 text-red-800 px-3 py-1 rounded-full text-xs">Tailwind</span>
            </div>
          </div>
        </div>
        <div class="bg-gray-50 rounded-xl overflow-hidden shadow-lg hover:shadow-2xl transition-shadow duration-300">
          <div class="bg-gray-200 border-2 border-dashed w-full h-48" />
          <div class="p-6">
            <h3 class="text-xl font-bold mb-2 text-gray-900">Portfolio Website</h3>
            <p class="text-gray-600 mb-4">A responsive portfolio website built with Astro and Tailwind CSS.</p>
            <div class="flex flex-wrap gap-2">
              <span class="bg-orange-100 text-orange-800 px-3 py-1 rounded-full text-xs">Astro</span>
              <span class="bg-cyan-100 text-cyan-800 px-3 py-1 rounded-full text-xs">TypeScript</span>
              <span class="bg-indigo-100 text-indigo-800 px-3 py-1 rounded-full text-xs">Tailwind</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section id="contact" class="contact bg-gradient-to-br from-gray-900 to-gray-800 text-white py-20">
    <div class="container mx-auto px-4">
      <h2 class="text-4xl font-bold text-center mb-16">Get In Touch</h2>
      <div class="max-w-2xl mx-auto bg-gray-800 bg-opacity-50 p-8 rounded-xl backdrop-blur-sm">
        <form class="space-y-6">
          <div>
            <label for="name" class="block mb-2 text-gray-300">Name</label>
            <input type="text" id="name" class="w-full px-4 py-3 bg-gray-700 text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Your name">
          </div>
          <div>
            <label for="email" class="block mb-2 text-gray-300">Email</label>
            <input type="email" id="email" class="w-full px-4 py-3 bg-gray-700 text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="your.email@example.com">
          </div>
          <div>
            <label for="message" class="block mb-2 text-gray-300">Message</label>
            <textarea id="message" rows="5" class="w-full px-4 py-3 bg-gray-700 text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Your message here..."></textarea>
          </div>
          <button type="submit" class="w-full bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white font-bold py-3 px-6 rounded-lg transition-all duration-300 transform hover:scale-[1.02]">Send Message</button>
        </form>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
</BaseLayout>